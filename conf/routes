# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /sync                       controllers.Application.sync
GET     /ws                         controllers.Application.ws
GET     /chat-history               controllers.Application.chatHistory
GET     /listContent                controllers.Application.listContent
POST    /chat                       controllers.Application.chat
POST    /order                      controllers.Application.order

GET     /backend                    controllers.Application.backend
POST    /status-error               controllers.Application.statusError
POST    /update-video-id            controllers.Application.updateVideoId
POST    /song-by-id                 controllers.Application.songById
POST    /song-by-title              controllers.Application.songByTitle

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
